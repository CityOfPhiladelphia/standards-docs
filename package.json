{
  "name": "phila-standards-docs",
  "version": "0.1.0",
  "description": "City of Philadelphia Standards documentation",
  "main": "static/js/main.js",
  "repository": "https://github.com/CityOfPhiladelphia/standards-docs.git",
  "author": "City of Philadelphia",
  "license": "GPL-3.0",
  "dependencies": {
    "phila-standards": "^0.2.8"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.0",
    "onchange": "^3.2.1",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "clean": "rimraf public/*",
    "prebuild": "mkdirp themes/phila.gov/static/js",
    "build:standards-css": "node-sass static-src/scss/style-guide.scss static/css/style-guide.css",
    "build:fonts": "cp -R node_modules/phila-standards/dist/fonts static",
    "build:prod": "cp node_modules/phila-standards/dist/js/phila-standards.js themes/phila.gov/static/js/standards.js && cp node_modules/phila-standards/dist/css/phila-standards.css themes/phila.gov/static/css/standards.css",
    "build": "yarn run build:dependencies && yarn run build:standards-css && yarn run build:fonts",
    "prestart": "yarn run build",
    "start": "hugo serve",
    "deploy": "yarn run clean && yarn run rebuild && yarn run build:prod && hugo"
  }
}
