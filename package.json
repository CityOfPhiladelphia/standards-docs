{
  "name": "phila-standards-docs",
  "version": "0.1.0",
  "description": "City of Philadelphia Standards documentation",
  "main": "static/js/main.js",
  "repository": "https://github.com/CityOfPhiladelphia/standards-docs.git",
  "author": "City of Philadelphia",
  "license": "GPL-3.0",
  "dependencies": {
    "phila-standards": "^0.2.2"
  },
  "devDependencies": {
    "browserify": "^14.1.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.0"
  },
  "scripts": {
    "clean": "rimraf public/*",
    "prebuild": "mkdirp themes/phila.gov/static/js",
    "build:theme-css": "node-sass --include-path node_modules/phila-standards/dist/css --output-style compressed --source-map true themes/phila.gov/static-src/scss/standards.scss themes/phila.gov/static/css/standards.css",
    "build:standards-css": "node-sass static-src/scss/style-guide.scss static/css/style-guide.css",
    "build:fonts": "cp -R node_modules/phila-standards/dist/fonts static",
    "build:js": "cp node_modules/phila-standards/dist/js/phila-standards.js themes/phila.gov/static/js/standards.js",
    "build": "yarn run build:theme-css && yarn run build:standards-css && yarn run build:fonts && yarn run build:js",
    "prestart": "yarn run build",
    "start": "hugo serve"
  }
}
